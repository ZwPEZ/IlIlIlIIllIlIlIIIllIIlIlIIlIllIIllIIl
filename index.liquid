document.querySelectorAll('.faq-item').forEach(details => {
  const summary = details.querySelector('.faq-question');
  const answer = details.querySelector('.faq-answer');

  summary.addEventListener('click', (event) => {
    // Prevent the default <details> toggling to take control of the animation
    event.preventDefault();

    if (details.open) {
      // --- Start closing animation ---
      answer.style.maxHeight = '0px';

      // Wait for the animation to finish before closing the <details> element
      setTimeout(() => {
        details.open = false;
      }, 500); // This duration should match the CSS transition time
    } else {
      // --- Start opening animation ---
      details.open = true;

      // Set max-height to the full scroll height of the answer
      // This allows the CSS transition to expand the element smoothly
      answer.style.maxHeight = `${answer.scrollHeight}px`;
    }
  });
});
