<div class="bg-cover bg-center mx-auto w-full px-4 !scroll-smooth relative">
  {% if announcement.length > 1 %}
  <div id="announcement-div"
    class="fade-out fixed top-20 right-2 bg-[#0a0a0a] p-4 rounded-md z-30 shadow-md border sm:max-w-sm max-w-[300px]">
    <div id="announcement-close-btn" class="absolute top-1 right-1 cursor-pointer">
      <svg width="16" height="16" viewBox="0 0 24 24" data-name="Line Color" xmlns="http://www.w3.org/2000/svg"
        class="icon line-color">
        <path style="fill:none;stroke:#fff;stroke-linecap:round;stroke-linejoin:round;stroke-width:2" d="M19 19 5 5" />
        <path data-name="primary"
          style="fill:none;stroke:#fff;stroke-linecap:round;stroke-linejoin:round;stroke-width:2" d="M19 5 5 19" />
      </svg>
    </div>
    <format-markdown content="{{ announcement | escape }}"></format-markdown>
  </div>
  {% endif %}
  <slot data-id="1" class="min-h-[100px]">
    <vertical-layout data-id="2a4a9a67-7276-4e3b-a150-1a03ab0fceed" data-slots="5"
      style="gap: 24px; align-items: center; justify-content: start" data-spacing="36" data-align-items="center"
      class="pt-4" data-justify-items="start">
      {% render "indexPage/header"
      , productsSold: productsSold
      , averageRating: averageRating
      , image: image
      , backgroundImage: backgroundImage
      , name: name %}
      <!-- Featured Products -->
      {% if isAnyProductFeatured %}
      {% render "indexPage/featuredProducts"
      , productsOrGroups: productsOrGroups %}
      {%- endif %}
      <!-- Our Products -->

      <div class="w-full relative">
        <div class="flex flex-col items-center pt-12 z-10 relative" id="products-list">
          <div class="flex flex-col items-center gap-2 px-4">
            <div class="relative text-blue-500">
              <div class="absolute h-full w-full bg-[--accent-color] opacity-10 rounded-md"></div>
              <div
                class="badge whitespace-nowrap border-transparent inline-flex items-center rounded-md border px-1.5 py-0.5 text-xs transition-colors duration-200 bg-opacity-5 text-[--accent-color] shadow hover:bg-opacity-10 w-fit gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="lucide lucide-smile-plus">
                  <path d="M22 11v1a10 10 0 1 1-9-10"></path>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                  <line x1="9" x2="9.01" y1="9" y2="9"></line>
                  <line x1="15" x2="15.01" y1="9" y2="9"></line>
                  <path d="M16 5h6"></path>
                  <path d="M19 2v6"></path>
                </svg>
                Best Seller
              </div>
            </div>
            <h2 class="text-center text-3xl font-semibold">Best Seller Products</h2>
            <p class="max-w-xl text-center text-xs text-muted-foreground">Products that are loved by our customers</p>
          </div>
        </div>

        <slot data-id="ccecc470-9d14-4065-8d11-7cb4df6110a3" class="w-full">
          <div class="relative w-full">
            {% assign arr = productsOrGroups %}
            <div id="products"
              class="relative mx-auto mt-10 grid w-fit grid-flow-row gap-6 px-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
              {%- for product in arr %}
              {% if product.isGroup == false %}
              <!-- Product Card -->
              {% render "indexPage/productCard"
              , product: product %}

              {% else %}
              <!-- Grouped Product -->
              {% render "indexPage/productGroupCard"
              , product: product %}
              {% endif %}
              {%- endfor %}
            </div>
          </div>
        </slot>
      </div>

      <!-- Our Bundles -->
      {% if bundles.length > 0 %}
      <div class="flex flex-col items-center pt-12">
        <div class="flex flex-col items-center gap-2 px-4">
          <div class="relative text-blue-500">
            <div class="absolute h-full w-full  bg-[--accent-color] opacity-10 rounded-md"></div>
            <div
              class="whitespace-nowrap border-transparent inline-flex items-center rounded-md border px-1.5 py-0.5 text-xs transition-colors duration-200 bg-opacity-5 text-[--accent-color] shadow hover:bg-opacity-10 w-fit gap-1.5">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-group">
                <path d="M3 7V5c0-1.1.9-2 2-2h2" />
                <path d="M17 3h2c1.1 0 2 .9 2 2v2" />
                <path d="M21 17v2c0 1.1-.9 2-2 2h-2" />
                <path d="M7 21H5c-1.1 0-2-.9-2-2v-2" />
                <rect width="7" height="5" x="7" y="7" rx="1" />
                <rect width="7" height="5" x="10" y="12" rx="1" />
              </svg>
              Popular Bundle
            </div>
          </div>
          <h2 class="text-center text-3xl font-semibold">Popular Bundles</h2>
          <p class="max-w-xl text-center text-xs text-muted-foreground">Bundles curated to suit your needs</p>
        </div>
      </div>

      <slot data-id="ccecc470-9d14-4065-8d11-7cb4df6110a3" class="w-full">
        {% assign arr = bundles %}
        <div id="bundles"
          class="relative mx-auto mt-10 grid w-fit grid-flow-row gap-6 px-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
          {%- for bundle in arr %}
          <!-- Bundle Card -->
          {% render "indexPage/bundleCard"
          , bundle: bundle %}
          {%- endfor %}
        </div>
      </slot>
      {%- endif %}
      <!-- FAQ section -->
      {% render "indexPage/faq" %}
    </vertical-layout>
  </slot>
