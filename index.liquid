  <style>
    .category-box {
      border: 1px solid var(--color);
    }

    .category-box .gradient {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: var(--color);
      filter: blur(50px);
      transition: all 0.25s ease-in-out;
      transform: scale(1) translateY(55%);
    }

    .category-box:hover .gradient {
      transform: scale(2) translateY(55%);
    }

    .products-filter-container {
      gap: 2rem;
    }

    @media (min-width: 768px) {

      .products-filter-container .product,
      .products-filter-container .product .product-info {
        flex-direction: row !important;
      }

      .products-filter-container .product .purchase {
        display: inline-flex !important;
      }
    }

    @media (min-width: 1024px) {
      .products-filter-container {
        flex-direction: row !important;
      }

      .products-filter-container .filter {
        width: 25% !important;
      }
    }

    .badge {
      box-shadow: 0 0 10px rgba(146, 105, 255, 0.3), 0 0 20px rgba(146, 105, 25.2);
    }

    .text-shadow-glow {
      text-shadow: 0 0 8px rgba(146, 105, 255, 0.6);
    }
